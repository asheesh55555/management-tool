<%if current_user.team.present?%>
	<p>
	<strong>Team:</strong>
	<%= current_user.team.name %>
	</p>
	<p>
	<strong>Member:</strong>
	<%= current_user.email %>
	</p>
	<%current_user.projects.each do |project|%>
		<p>
		<strong>Project:</strong>
		<%= project.name %>
		<%= link_to 'Show Project', project_path(project)%>
		</p>
		<%@tasks=MemberTask.where(team_id: current_user.team.id, user_id: current_user.id, project_id: project.id)%>
		<%@tasks.each do |task|%>
			<p>
			<strong>Task:</strong>
			<%= Task.find(task.task_id).name %>
			<%= link_to 'Show Task and Dependencies', project_task_path(project, task.task_id)%>
			</p>
		<%end%>
	<%end%>
<% end %>				


