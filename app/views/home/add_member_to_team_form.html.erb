<%= form_for :team_member, url: submit_member_path do |f| %>

  <div class="field">
    <%= f.label :team %>
    <select name="team" class="form-control" id="exampleInputEmail1" aria_describedby ="emailHelp">
        <%@teams.each do |t|%>
           <option value="<%=t.id%>"><%=t.name%></option>
        <%end%>
    </select>
  </div>
  
  <div class="form-group">
    <%= f.label :member %>
    <select name="member" class="form-control" id="exampleInputEmail1" aria_describedby ="emailHelp">
        <%@users.each do |u|%>
          <%unless u.team.present?%>
              <option value="<%=u.id%>"><%=u.email%></option>
          <%end%>
        <%end%>
    </select>
  </div>
  
  <p>
    <%= f.submit 'Add', class: "btn btn-primary" %>
  </p>
<% end %>