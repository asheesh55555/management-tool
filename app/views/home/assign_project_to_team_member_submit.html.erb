<p>
  <strong>Team:</strong>
  <%= @user.team.name %>
</p>

<p>
  <strong>Member:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Project:</strong>
  <%= @project.name %>
</p>
<%@team = @user.team%>

<%= form_for :assign_project_task_team_member, url: project_task_submit_path(team: @team, user: @user, project: @project) do |f| %>

  <div class="field">
    <%= f.label :task %>
    <select name="task" class="form-control" id="exampleInputEmail1" aria_describedby ="emailHelp">
        <%@project.tasks.each do |t|%>
        <%unless MemberTask.where(task_id: t.id).first.present?%>
        <option value="<%=t.id%>"><%=t.name%></option>
        <%end%>
        <%end%>
    </select>
  </div>

  <p>
    <%= f.submit 'Assign', class: "btn btn-primary"%>
  </p>
<% end %>
<%if @tasks.first.present?%>

    <%@tasks.each do |t|%>
    <p>
      <strong>Task Assigned:</strong>
      <%= Task.find(t.task_id).name %>
    </p>
    <%end%>
<%end%>