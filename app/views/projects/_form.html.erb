    <%= form.label :technology %>
    <%= form.text_field :technology, id: :project_technology %>
  </div>

  <div class="field">
    <%= form.label :document %>
    <%= form.file_field :document, id: :project_document %>
  </div>

  <div class="field">
    <%= form.label :project_type %>
    <%#= form.text_field :project_type, id: :project_project_type %>
